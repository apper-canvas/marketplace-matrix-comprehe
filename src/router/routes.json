{
  "/": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "Homepage is public",
            "rule": "public"
          }
        ]
      }
    }
  },
  "/category/:categoryId": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "Category browsing is public",
            "rule": "public"
          }
        ]
      }
    }
  },
  "/product/:productId": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "Product viewing is public",
            "rule": "public"
          }
        ]
      }
    }
  },
  "/cart": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "User must be logged in to view cart",
            "rule": "authenticated"
          }
        ]
      },
      "redirectOnDeny": "/login"
    }
  },
  "/checkout": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "User must be logged in to checkout",
            "rule": "authenticated"
          }
        ]
      },
      "redirectOnDeny": "/login"
    }
  },
  "/orders": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "User must be logged in to view orders",
            "rule": "authenticated"
          }
        ]
      },
      "redirectOnDeny": "/login"
    }
  },
  "/wishlist": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "User must be logged in to view wishlist",
            "rule": "authenticated"
          }
        ]
      },
      "redirectOnDeny": "/login"
    }
  },
  "/order-confirmation/:orderId": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "User must be logged in to view order confirmation",
            "rule": "authenticated"
          }
        ]
      },
      "redirectOnDeny": "/login"
    }
  },
  "/login": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "Login page is public",
            "rule": "public"
          }
        ]
      }
    }
  },
  "/signup": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "Signup page is public",
            "rule": "public"
          }
        ]
      }
    }
  }
}